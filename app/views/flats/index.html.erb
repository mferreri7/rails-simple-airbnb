<h1>Welcome to AirBnB</h1>
<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <div class="flat-card">
        <div class="flat-card-basic-info">
          <h3><%= flat.name %></h3>
          <p><%= flat.description %></p>
        </div>
        <div class="flat-card-details">
          <p>
            <i class="fas fa-users"></i>
            <%= flat.number_of_guests %>
          </p>
          <p>
            <i class="fas fa-euro-sign"></i>
            <%= flat.price_per_night %>
          </p>
        </div>
        <div class="flat-card-links"><%= link_to "More info", flat_path(flat)  %></div>
      </div>
    </div>
  <% end %>
</div>
